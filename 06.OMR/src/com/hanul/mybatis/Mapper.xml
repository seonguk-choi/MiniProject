<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanul.mybatis.Mapper.xml">
	<!-- 학생 정보 리스트 불러오기 -->
	<select id="studentSearchAll" resultType="StudentDTO">
		select * from student <!-- order by rank desc -->
	</select>
	<!-- 학생 정보 수정하기 -->
	<update id="studentUpdate" parameterType="StudentDTO">
		update student 
		set name = #{name},
			score = #{score},
			result = #{result},
			apply = #{apply},
			manager = #{manager},
			rank = #{rank}	
		where std_code = #{std_code}
	</update>
	
	<insert id="studentInsert" parameterType="studentDTO">
		insert into student
		 values(#{name},
		 		#{std_code},
		 		#{score}, 
		 		#{result}, 
		 		#{apply}, 
		 		#{manager}, 
		 		#{rank} )
	</insert>
	
	<select id="getById" parameterType="int" resultType="studentDTO">
		select * from student where std_code = #{std_code}
	</select>
</mapper>

                                                                                          
                                                                                          
                                                                                          
                                                                                          
                                                                                          
                                                                                          
                                                                                          
                                                                                          