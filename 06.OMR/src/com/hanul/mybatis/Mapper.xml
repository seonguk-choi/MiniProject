<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanul.mybatis.Mapper.xml">
	<select id="loginCheck1" resultType="int">
		select count(*) from Student where std_code = #{std_code}
	</select>	
	<select id="loginCheck2" resultType="StudentDTO">
		select * from Student where std_code = #{std_code}
	</select>
	<select id="studentSearchAll" resultType="StudentDTO">
		select * from student <!-- order by rank desc -->
	</select>
	<!-- 학생 정보 수정하기 -->
	<update id="studentUpdate" parameterType="StudentDTO">
		update student 
		set name = #{name},
			score = #{score},
			result = #{result},
			apply = #{apply},
			manager = #{manager},
			rank = #{rank}	
		where std_code = #{std_code}
	</update>	
</mapper>